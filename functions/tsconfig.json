{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": false,
    "target": "es2017",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmitOnError": false,
    "ignoreDeprecations": "5.0"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "../src/**/*"
  ]
}
